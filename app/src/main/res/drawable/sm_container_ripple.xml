<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:color="@color/Blue300"
        tools:targetApi="lollipop">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/Blue100" />
            <corners
                    android:bottomRightRadius="@dimen/sm_container_radius"
                    android:topRightRadius="@dimen/sm_container_radius"
                    android:topLeftRadius="@dimen/sm_container_radius"
                    android:bottomLeftRadius="@dimen/sm_container_radius"
            />
        </shape>
    </item>
    <item android:drawable="@drawable/sm_container"></item>
</ripple>