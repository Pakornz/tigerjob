<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/Grey300"/>
            <!--shadow Color-->

            <corners
                    android:bottomRightRadius="@dimen/sm_container_radius"
                    android:topRightRadius="@dimen/sm_container_radius"
                    android:topLeftRadius="@dimen/sm_container_radius"
                    android:bottomLeftRadius="@dimen/sm_container_radius"
            />
        </shape>
    </item>

    <item
            android:left="0dp"
            android:right="1dp"
            android:top="0dp"
            android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/Grey50"/> <!-- Background Color -->
            <corners
                    android:bottomRightRadius="@dimen/sm_container_radius"
                    android:topRightRadius="@dimen/sm_container_radius"
                    android:topLeftRadius="@dimen/sm_container_radius"
                    android:bottomLeftRadius="@dimen/sm_container_radius"
            />
        </shape>
    </item>
</layer-list>